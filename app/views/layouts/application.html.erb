  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>TimeReporter</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    "application/application" %>
    <%= javascript_include_tag "head/application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--[if lt IE 7]>
      <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->
    <%= render partial: 'flash_notice', flash: flash %>
    <nav class="nav-bar">
      <ul>
        <% if user_signed_in? %>
          <li class="pull-left"><%= link_to "timesheet", root_path, class: get_class("time_entries") %></li>
          <li class="pull-left"><%= link_to "projects", projects_path, class: get_class("projects") %></li>
          <li class="pull-left"><%= link_to "reports", reports_path, class: get_class("reports") %></li>
          <li class="pull-right"><%= link_to "logout", destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>
    </nav>
    <div class="content">
      <%= yield %>
    </div>

    <%= javascript_include_tag "application/application" %>
    <%= yield(:javascript) %>
  </body>
