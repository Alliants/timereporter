<%= render 'layouts/date_header', options: { title: @report.object.name } %>

<% total_time = 0 %>

<table class="table two-col tablesorter">
  <thead>
    <tr>
      <th class="header">Project</th>
      <th class="header">Hours</th>
    </tr>
  </thead>
  <tbody>
    <% @report.times.each do |key, time| %>
      <tr>
        <td><%= key %></td>
        <td><%= hours time  %></td>
        <% total_time += time %>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2">Total: <%= hours total_time %></td>
    </tr>
  </tfoot>
</table>
