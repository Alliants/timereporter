<div class="form-box">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.input :email, :required => true, label: false, autofocus: true, placeholder: "email" %>
    <%= f.button :submit, "Send me instructions", class: "btn btn-primary" %>
    <%= link_to "Sign in", new_session_path(resource_name), class: "pull-left" %>
    <%= link_to "Create an account", new_registration_path(resource_name), class: "pull-right" %>
  <% end %>
</div>