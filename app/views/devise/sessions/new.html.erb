<div class="form-box">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "email" %>
    <%= f.input :password, required: false, label: false, placeholder: "password" %>
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
    <%= link_to "Create an account", new_registration_path(resource_name), class: "pull-left" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "pull-right" %>
  <% end %>
</div>

